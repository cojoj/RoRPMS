<% if projects(status).count > 0 %>
  <h2><%= status %> projects</h2>
  <table border='1'>
    <tr>
      <th>Lp.</th>
      <th>Title</th>
      <th>Status</th>
      <th>Created at</th>
      <th>Updated at</th>
    </tr>
    
    <% projects(status).each_with_index do |project, index| %>
      <tr>
        <td><%= index + 1 %>.</td>
        <td><%= project.title %></td>
        <td>
          <%= project.status %><br>
          <%= link_to 'Change', edit_project_path(project.id) %>
        </td>
        <td>
          <%= project.created_at.localtime.strftime('%F') %><br>
          <%= project.created_at.localtime.strftime('%R') %>
        </td>
        <td>
          <%= project.created_at.localtime.strftime('%F') %><br>
          <%= project.created_at.localtime.strftime('%R') %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>