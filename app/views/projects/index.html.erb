<h1>List of projects</h1>

<%= link_to 'New Project', new_project_path %><br>

<h2>Waiting projects</h2>

<% if @projects.count > 0 %>
  <table border='1'>
    <tr>
      <th>Lp.</th>
      <th>Title</th>
      <th>Status</th>
    </tr>
    
    <% @projects.each_with_index do |project, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= project.title %></td>
        <td>
          <%= project.status %><br>
          <%= link_to 'Change', edit_project_path(project.id) %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>